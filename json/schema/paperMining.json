{
  "title": "Paper Mining",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "projectName": {
      "title": "Project name",
      "type": "string",
      "options": {
        "inputAttributes": {
          "placeholder": "Enter project name"
        }
      }
    },
    "papers": {
      "title": "papers",
      "type": "array",
      "items": {
        "$ref": "#/definitions/paper"
      }
    },
    "thoughts": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/thought"
      }
    }
  },
  "definitions": {
    "section": {
      "title": "Section",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "priority": {
          "type": "integer"
        }
      }
    },
    "comment": {
      "title": "Comment",
      "type": "object",
      "properties": {
        "content": {
          "type": "string"
        },
        "commenter": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        }
      }
    },
    "thought": {
      "title": "Thought",
      "type": "object",
      "required":["id"],
      "properties": {
        "id": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": []
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": []
          }
        },
        "section": {
          "$ref": "#/definitions/section",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve", "plant"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "tag": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "quotation": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "comment": {
          "$ref": "#/definitions/comment",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve", "plant"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "discussion": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/comment"
          },
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "rating": {
          "type": "number",
          "minimum": 0,
          "maximum": 5,
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "order": {
          "type": "integer",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "toPlant": {
          "type": "boolean",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["carve"]
          }
        },
        "written": {
          "type": "boolean",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["plant"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["plant"]
          }
        },
        "paperID": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": []
          }
        }
      }
    },
    "paper": {
      "title": "Paper",
      "type": "object",
      "required": [
        "id", "title"
      ],
      "properties": {
        "id": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": []
          }
        },
        "title": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          }
        },
        "bibtex": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": []
          }
        },
        "pdf": {
          "type": "string",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": []
          }
        }
      }
    }
  }
}