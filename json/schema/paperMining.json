{
  "title": "Paper Mining",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/JinkiJung/PaperMining/blob/master/json/schema/paperMining.json",
  "properties": {
    "projectName": {
      "title": "Project name",
      "type": "string",
      "options": {
        "inputAttributes": {
          "placeholder": "Enter project name"
        }
      }
    },
    "sections": {
      "title": "Section list",
      "type": "array",
      "items": {
        "$ref": "#/definitions/section"
      }
    },
    "papers": {
      "title": "Paper list",
      "type": "array",
      "items": {
        "$ref": "#/definitions/paper"
      }
    },
    "thoughts": {
      "title": "Thought list",
      "type": "array",
      "items": {
        "$ref": "#/definitions/thought"
      }
    }
  },
  "definitions": {
    "section": {
      "title": "Section",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description" : "The UUID of a section",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine","carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine","carve"]
          }
        },
        "name": {
          "type": "string",
          "description" : "Section name"
        },
        "number": {
          "type": "string",
          "description" : "Section (hierarchical) number"
        },
        "order": {
          "type": "integer",
          "description" : "Order of the section"
        }
      }
    },
    "comment": {
      "title": "Comment",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description" : "The UUID of a comment",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine","carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine","carve"]
          }
        },
        "content": {
          "type": "string",
          "description" : "Actual comment"
        },
        "commenter": {
          "type": "string",
          "description" : "User who made the comment"
        },
        "timestamp": {
          "type": "string",
          "description" : "Timestamp of comment"
        }
      }
    },
    "thought": {
      "title": "Thought",
      "type": "object",
      "required":["id"],
      "properties": {
        "id": {
          "type": "string",
          "description" : "The UUID of a thought",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine","carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": []
          }
        },
        "order": {
          "type": "integer",
          "description" : "Order of thoughts to be planted",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["carve"]
          }
        },
        "section": {
          "type": "string",
          "description" : "Section related to the thought",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve", "plant"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "tag": {
          "type": "string",
          "description" : "Tag/keyword related to the thought",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "quotation": {
          "type": "string",
          "description" : "Quotation from a collected paper",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "comment": {
          "type": "object",
          "description" : "Actual thought",
          "properties": {
            "content": {
              "type": "string"
            },
            "commenter": {
              "type": "string"
            },
            "timestamp": {
              "type": "string"
            }
          },
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve", "plant"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "importance": {
          "type": "number",
          "description" : "Significance of thought for the plant",
          "minimum": 0,
          "maximum": 5,
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          }
        },
        "toPlant": {
          "type": "boolean",
          "description" : "Mark of the thought to be planted",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine", "carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["mine","carve"]
          }
        },
        "written": {
          "type": "boolean",
          "description" : "Confirmation of the thought plant",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["plant"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["plant"]
          }
        },
        "paperID": {
          "type": "string",
          "description" : "ID of the related paper",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["carve"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["carve"]
          }
        }
      }
    },
    "paper": {
      "title": "Paper",
      "type": "object",
      "required": [
        "id", "title"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description" : "The UUID of a paper",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          }
        },
        "title": {
          "type": "string",
          "description" : "Title of a paper",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          }
        },
        "bibtex": {
          "type": "string",
          "description" : "Bibtex of a paper",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          }
        },
        "pdf": {
          "type": "string",
          "description" : "PDF link of a paper",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          }
        },
        "importance": {
          "type": "number",
          "description" : "Relevance of paper to the topic",
          "minimum": 0,
          "maximum": 5,
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          }
        },
        "contributor": {
          "type": "string",
          "description" : "User who added the paper",
          "_visible": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          },
          "_editable": {
            "type": "array",
            "items":{
              "type": "string",
              "enum": ["collect", "mine", "carve", "plant"]
            },
            "default": ["collect"]
          }
        }
      }
    }
  }
}